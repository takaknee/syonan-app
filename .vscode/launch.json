{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flutter: 開発環境で起動",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "flutterMode": "debug",
      "deviceId": "flutter-tester",
      "args": [
        "--dart-define=ENVIRONMENT=development"
      ]
    },
    {
      "name": "Flutter: プロファイルモードで起動",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "flutterMode": "profile",
      "args": [
        "--dart-define=ENVIRONMENT=production"
      ]
    },
    {
      "name": "Flutter: リリースモードで起動",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "flutterMode": "release"
    },
    {
      "name": "Flutter: デバイスにアタッチ",
      "type": "dart",
      "request": "attach",
      "deviceId": "flutter-tester"
    },
    {
      "name": "Dart: テストをデバッグ",
      "type": "dart",
      "request": "launch",
      "program": "test/",
      "args": [
        "--reporter=expanded"
      ]
    },
    {
      "name": "Flutter: 統合テスト",
      "type": "dart",
      "request": "launch",
      "program": "integration_test/app_test.dart",
      "flutterMode": "debug",
      "deviceId": "flutter-tester"
    }
  ],
  "compounds": [
    {
      "name": "Flutter: すべて起動",
      "configurations": [
        "Flutter: 開発環境で起動"
      ]
    }
  ]
}