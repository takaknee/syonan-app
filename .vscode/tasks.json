{
  "version": "2.0.0",
  "tasks": [
    // === 基本開発タスク ===
    {
      "label": "Flutter: 依存関係取得",
      "type": "shell",
      "command": "flutter",
      "args": [
        "pub",
        "get"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Flutter: コード解析",
      "type": "shell",
      "command": "flutter",
      "args": [
        "analyze"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Flutter: テスト実行",
      "type": "shell",
      "command": "flutter",
      "args": [
        "test"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Flutter: カバレッジ付きテスト",
      "type": "shell",
      "command": "flutter",
      "args": [
        "test",
        "--coverage"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    // === コードフォーマット ===
    {
      "label": "Dart: フォーマット実行",
      "type": "shell",
      "command": "dart",
      "args": [
        "format",
        "."
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Dart: フォーマットチェック",
      "type": "shell",
      "command": "dart",
      "args": [
        "format",
        "--set-exit-if-changed",
        "."
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    // === ビルドタスク ===
    {
      "label": "Flutter: Webビルド",
      "type": "shell",
      "command": "flutter",
      "args": [
        "build",
        "web",
        "--release"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Flutter: ビルド（Android Debug）",
      "type": "shell",
      "command": "flutter",
      "args": [
        "build",
        "apk",
        "--debug"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    // === Web開発 ===
    {
      "label": "Flutter: Webアプリ起動",
      "type": "shell",
      "command": "flutter",
      "args": [
        "run",
        "-d",
        "web-server",
        "--web-hostname",
        "0.0.0.0",
        "--web-port",
        "9100"
      ],
      "group": "build",
      "isBackground": true,
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "Flutter: Webアプリ停止",
      "type": "shell",
      "command": "pkill",
      "args": [
        "-f",
        "flutter run.*web-server"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "システム: ポート9100解放",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "lsof -ti :9100 | xargs -r kill"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    // === 品質保証（組み合わせタスク） ===
    {
      "label": "QA: 全チェック",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Dart: フォーマットチェック",
        "Flutter: コード解析",
        "Flutter: テスト実行"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "QA: 修正して再チェック",
      "dependsOrder": "sequence",
      "dependsOn": [
        "Dart: フォーマット実行",
        "Flutter: コード解析",
        "Flutter: テスト実行"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared"
      }
    },
    {
      "label": "開発環境: セットアップ確認",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "echo '🔍 開発環境セットアップ状況:' && echo 'Flutter:' && flutter --version | head -1 && echo 'Dart:' && dart --version && echo '✅ セットアップ完了'"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "プロジェクト: クリーン",
      "type": "shell",
      "command": "flutter",
      "args": [
        "clean"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}